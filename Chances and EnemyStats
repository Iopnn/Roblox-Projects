local Chances = {}

Chances.Rarities = {
	"Common",
	"Uncommon",
	"Rare",
	"Epic",
	"Legendary",
}

Chances.UnitChances = {
	["Common"] = 50,
	["Uncommon"] = 30,
	["Rare"] = 15,
	["Epic"] = 4,
	["Legendary"] = 1
}


-- Functions

function Chances.GetAllRarities() -- Sends all the raritier to further code
	return Chances.Rarities
end

function Chances.GetAllChances() -- Sends all the chances to further code
	return Chances.UnitChances
end

function Chances.GetChanceByRarity(rarity) -- Sends a rarity it to further code
	return Chances.UnitChances[rarity]
end

return Chances


